<style>
    /* Animation property for badge */
    @property --angle {
        syntax: "<angle>";
        initial-value: 0deg;
        inherits: false;
    }

    /* Badge Styles */
    .badge-wrapper {
        position: relative;
        display: inline-block;
    }

    .badge-wrapper::before {
        content: "";
        position: absolute;
        inset: -3px;
        border-radius: 9999px;
        background: conic-gradient(
            from var(--angle),
            transparent 0deg,
            transparent 300deg,
            #fbbf24 315deg,
            #f59e0b 330deg,
            #f97316 345deg,
            #fb923c 360deg
        );
        animation: rotate 4s linear infinite;
        z-index: -1;
    }

    @keyframes rotate {
        to {
            --angle: 360deg;
        }
    }

    .badge {
        position: relative;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        border-radius: 9999px;
        background: #000;
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        font-weight: 500;
        letter-spacing: 0.025em;
        z-index: 1;
    }

    .badge.gold {
        color: rgb(251, 191, 36);
