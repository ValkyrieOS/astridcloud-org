---
import "../styles/app.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "AstridCloud — Infraestructura Cloud Profesional",
  description = "AstridCloud: Infraestructura cloud profesional con tecnologías open source. Servicios de hosting, desarrollo y soluciones empresariales.",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#0a0a0a" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-neutral-950 text-neutral-100 antialiased">
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
