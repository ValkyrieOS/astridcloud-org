---
interface Props {
    title: string;
    version: string;
    status: "active" | "transitioning" | "development";
    statusText: string;
    icon?: string;
    link?: string;
}

const {
    title,
    version,
    status,
    statusText,
    icon = "/favicon.svg",
    link,
} = Astro.props;

const statusStyles = {
    active: "bg-green-900/30 text-green-300 border-green-800/50",
    transitioning: "bg-yellow-900/30 text-yellow-300 border-yellow-800/50",
    development: "bg-neutral-800/50 text-neutral-300 border-neutral-700/50",
};

const titleColors = {
    active: "text-white",
    transitioning: "text-yellow-400",
    development: "text-white",
};
---

<article
    class="group rounded-lg border border-neutral-800/80 bg-gradient-to-br from-neutral-900/90 to-neutral-900/50 p-5 hover:bg-neutral-800/80 transition-all duration-300 hover:shadow-lg hover:shadow-neutral-900/50 hover:-translate-y-1 backdrop-blur-sm"
>
    <header class="flex items-center gap-3">
        <div class="relative">
            <img
                src={icon}
                alt={title}
                class="h-10 w-10 group-hover:scale-110 transition-transform duration-300"
            />
            <div
                class="absolute inset-0 bg-gradient-to-br from-blue-500/20 to-purple-500/20 rounded opacity-0 group-hover:opacity-100 transition-opacity duration-300 blur-xl"
            >
            </div>
        </div>
        <div>
            <h3 class={`font-medium ${titleColors[status]}`}>{title}</h3>
            <p class="text-xs text-neutral-400 mt-0.5">
                Versi√≥n <span class="font-mono">{version}</span>
            </p>
        </div>
    </header>
    <div class="mt-4 flex items-center gap-2 flex-wrap">
        <span
            class={`inline-flex items-center rounded-md px-2.5 py-1 text-xs font-medium border ${statusStyles[status]}`}
        >
            {statusText}
        </span>
        {
            link && (
                <a
                    href={link}
                    class="text-xs text-neutral-400 underline decoration-neutral-700 underline-offset-2 hover:text-white hover:decoration-neutral-500 transition-colors"
                >
                    Ver repositorio
                </a>
            )
        }
    </div>
</article>
